{
  "screen": "reset",
  "components": [
    {
      "id": "header_navigation",
      "component": "Header",
      "props": {
        "action": "navigate:back",
        "showBack": true
      }
    },
    {
      "id": "reset_title",
      "component": "Text",
      "props": {
        "title": "Recuperar senha",
        "textStyle": "header",
        "size": 24,
        "typeface": "poppins_bold",
        "textColor": "#000000",
        "gravity": "center",
        "align": "center",
        "margin_top": 124
      }
    },
    {
      "id": "reset_subtitle",
      "component": "Text",
      "props": {
        "title": "Digite seu endereço de email\npara recuperar sua senha.",
        "size": 14,
        "typeface": "poppins",
        "textColor": "#000000",
        "gravity": "center",
        "align": "center",
        "margin_top": 16
      }
    },
    {
      "id": "reset_input_focus_email",
      "component": "Input",
      "props": {
        "hint": "Digite seu email",
        "keyboardType": "email",
        "validateOnChange": true,
        "margin_top": 37,
        "rules": [
          {
            "component": "required",
            "message": "O e-mail não pode estar vazio"
          },
          {
            "component": "email",
            "message": "Digite um e-mail válido"
          }
        ]
      }
    },
    {
      "id": "reset_button_click_login",
      "component": "Button",
      "props": {
        "title": "Enviar",
        "size": 14,
        "typeface": "poppins_medium",
        "backgroundColor": "#0E64D2",
        "textColor": "#FFFFFF",
        "border_radius": 5,
        "submit": true,
        "analyticsEvent": "reset_password_success",
        "action": "submit:login-flow",
        "margin_top": 32
      }
    }
  ]
}