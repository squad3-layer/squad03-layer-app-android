<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.view.DetailsNewsActivity">

    <com.example.mylibrary.ds.toolbar.DsToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:contentDescription="@string/details_news_image_accessibility"
                android:importantForAccessibility="yes"
                android:scaleType="centerCrop"
                android:src="@drawable/img_details_news"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_21"
                android:importantForAccessibility="no"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageView
                    android:id="@+id/icFavoriteButton"
                    android:layout_width="@dimen/spacing_24"
                    android:layout_height="@dimen/spacing_24"
                    android:clickable="true"
                    android:importantForAccessibility="yes"
                    android:contentDescription="@string/details_news_favorite_button_accessibility"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:focusable="true"
                    android:src="@drawable/selector_favorite" />

                <ImageView
                    android:id="@+id/icShareButton"
                    android:layout_width="@dimen/spacing_24"
                    android:layout_height="@dimen/spacing_24"
                    android:layout_marginStart="@dimen/spacing_21"
                    android:importantForAccessibility="yes"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/details_news_share_button_accessibility"
                    android:src="@drawable/ic_share" />
            </LinearLayout>

            <com.example.mylibrary.ds.text.DsText
                android:id="@+id/detailsNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_14"
                android:layout_marginTop="@dimen/spacing_12"
                android:layout_marginEnd="@dimen/spacing_14"
                android:text="@string/details_news_text_title"
                android:textColor="#000000"
                android:importantForAccessibility="yes"
                app:dsTextStyle="header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <com.example.mylibrary.ds.text.DsText
                android:id="@+id/detailsNewsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_31"
                android:layout_marginStart="@dimen/spacing_14"
                android:layout_marginEnd="@dimen/spacing_14"
                android:importantForAccessibility="yes"
                android:textColor="#000000"
                android:text="@string/details_news_text_date"
                app:dsFontWeight="regular"
                android:textSize="@dimen/size_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsNewsTitle" />

            <com.example.mylibrary.ds.text.DsText
                android:id="@+id/detailsNewsAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:layout_marginStart="@dimen/spacing_14"
                android:layout_marginEnd="@dimen/spacing_14"
                android:importantForAccessibility="yes"
                android:textColor="#000000"
                android:text="@string/details_news_text_author"
                app:dsFontWeight="regular"
                android:textSize="@dimen/size_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsNewsDate"/>

            <com.example.mylibrary.ds.text.DsText
                android:id="@+id/detailsNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_14"
                android:layout_marginStart="@dimen/spacing_14"
                android:layout_marginEnd="@dimen/spacing_14"
                android:importantForAccessibility="yes"
                android:textColor="#000000"
                android:text="@string/details_news_text_description"
                android:textSize="@dimen/size_16"
                app:dsFontWeight="regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailsNewsAuthor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>